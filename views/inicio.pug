extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")


block contenido
    div(class="py-5 ")
        h1(class="text-4xl font-extrabold text-center") Ubicación en el Mapa

        div(class="flex flex-col items-center gap-4 py-10 md:flex-row")
            h2(class="text-sm font-bold text-gray-800 uppercase") Filtrar Propiedades:

            div(class="flex items-center w-full gap-2 md:w-auto")
                label(for="categorias" class="w-24 text-sm font-bold text-gray-500 uppercase") Categorías
                select(id="categorias" class="flex-1 w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow" )
                    option(value="") - Seleccione -
                    each categoria in categorias
                        option(value=categoria.id )= categoria.nombre

            div(class="flex items-center w-full gap-2 md:w-auto")
                label(for="precios" class="w-24 text-sm font-bold text-gray-500 uppercase") Precios
                select(id="precios" class="flex-1 w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow" )
                    option(value="") - Seleccione -
                    each precio in precios
                        option(value=precio.id )= precio.nombre

        div(id="mapa-inicio" class="h-[600px] mt-5")

        section(class="py-5")
            h2(class="pt-10 text-4xl font-extrabold text-center") Casas en Renta

            div(class="grid grid-cols-1 gap-5 mt-10 lg:grid-cols-3")
                each propiedad in casas
                    include ./templates/card

        section(class="py-5")
            h2(class="pt-10 text-4xl font-extrabold text-center") Departamentos en Renta

            div(class="grid grid-cols-1 gap-5 mt-10 lg:grid-cols-3")
                each propiedad in departamentos
                    include ./templates/card

        section(class="py-5")
            h2(class="pt-10 text-4xl font-extrabold text-center") Quintas en Renta

            div(class="grid grid-cols-1 gap-5 mt-10 lg:grid-cols-3")
                each propiedad in quintas
                    include ./templates/card

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js")