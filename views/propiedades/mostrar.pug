extends ../layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
    style.
      #mensaje{
         resize: none;
      }

block contenido 

    //pre= JSON.stringify(propiedad, undefined, 2)

    div(class="py-5")
        h1(class="my-10 text-4xl font-extrabold text-center")= propiedad.titulo

        div 
            a(href="#" class="text-sm font-bold text-gray-600") Categoria: 
                span(class="font-normal")= propiedad.categoria.nombre

        div(class="mt-5 md:flex md:gap-4 md:items-start")
            div(class="bg-white rounded-lg shadow md:w-2/3")
                img(src=`/uploads/${propiedad.imagen}`, alt=`Imagen ${propiedad.titulo}`)

                div(class="px-5 py-10 space-y-5")
                    p= propiedad.descripcion 

                    h2(class="text-2xl font-bold leading-6 text-gray-900") Informacion de la Propiedad

                    div(class="grid grid-cols-1 md:grid-cols-2 gap-y-2")
                        p(class="text-xs font-bold text-gray-600") WC
                            span(class="block text-lg text-gray-800")= propiedad.wc

                        p(class="text-xs font-bold text-gray-600") Habitaciones
                            span(class="block text-lg text-gray-800")= propiedad.habitaciones

                        p(class="text-xs font-bold text-gray-600") Estacionamiento
                            span(class="block text-lg text-gray-800")= propiedad.estacionamiento

                        p(class="text-xs font-bold text-gray-600") Precio
                            span(class="block text-lg text-gray-800")= propiedad.precio.nombre

            aside(class="bg-white rounded-lg shadow md:w-1/3")
                h3(class="py-10 text-2xl font-bold leading-6 text-center text-gray-900") Ubicacion

                div(class="h-96" id="mapa")
                    p(class="hidden" id="lat")= propiedad.lat
                    p(class="hidden" id="lng")= propiedad.lng

                div(class="p-5")
                    p(class="text-xs font-bold text-gray-600") Direccion: 
                     span(id="calle" class="block text-lg text-gray-800")= propiedad.calle

                    if !esVendedor

                        h2(class="my-5 text-2xl font-extrabold text-center text-gray-900") Vendedor
                        if enviado 
                            p(class="p-2 font-bold text-center text-green-600 uppercase bg-green-100") Mensaje Enviado Correctamente

                        else if usuario
                            if errores
                                div(class="max-w-md mx-auto my-10")
                                    each error in errores
                                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

                            form(method="POST")
                                input(type="hidden" name="_csrf" value= csrfToken)

                                div(class="space-y-5")
                                    label(for="mensaje") Mensaje:
                                    textarea(id="mensaje" name="mensaje" placeholder=" Escribe tu mensaje aqui" class="w-full px-2 py-2 placeholder-gray-400 border border-gray-300 rounded-lg shadow")

                                    input(type="submit" value="Enviar Mensaje" class="w-full p-2 text-sm font-bold text-white uppercase cursor-pointer bg-emerald-600")    
                        else 
                            div(class="flex flex-col items-center justify-center gap-2")
                                p(class="text-center") Si deseas contactar al vendedor
                                a(class="text-emerald-600" href="/auth/registro") debes crear una cuenta
                    
block scripts 
   script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
   script(src="/js/mostrarMapa.js")