div(class="bg-white rounded-lg shadow")
    img(class="object-cover w-full h-72" src=`/uploads/${propiedad.imagen}` alt=` imagen casa ${propiedad.titulo}`)
    div(class="p-5 space-y-5")
        h3(class="text-2xl font-bold")= propiedad.titulo
        p(class="text-sm text-gray-600") Habitaciones: 
            span(class="font-bold text-gray-800")= propiedad.habitaciones
        p(class="text-sm text-gray-600") WC: 
            span(class="font-bold text-gray-800")= propiedad.wc
        p(class="text-sm text-gray-600") Precio:  
            span(class="font-bold text-gray-800")= propiedad.precio.nombre
        a(href=`/propiedad/${propiedad.id}` class="block w-full p-2 font-bold text-center text-white uppercase rounded bg-emerald-600") Ver Propiedad 